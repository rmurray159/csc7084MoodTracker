<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Entries</title>

    <style>
    </style>

  </head>
  <body>
    <%- include('_navin') %>
    <section class="gradient-background">
    <div class="container mt-5">
      <div>
        <h1>Your Snapshots</h1>
        
      </div>
      <br>
        <div class="row">
          <% const options = { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }; %>
          <% snapshots.forEach((snapshotlist) => { %>
            <% var snapshotId = snapshotlist.snapshot_id; %>
            <% var enjoyment_level = snapshotlist.enjoyment_level; %>
            <% var surprise_level = snapshotlist.surprise_level; %>
            <% var contempt_level = snapshotlist.contempt_level; %>
            <% var sadness_level = snapshotlist.sadness_level; %>
            <% var fear_level = snapshotlist.fear_level; %>
            <% var disgust_level = snapshotlist.disgust_level; %>
            <% var anger_level = snapshotlist.anger_level; %>
            <% var rawdate = new Date(snapshotlist.timestamp); %>
            <% var formattedDate = rawdate.toLocaleDateString('en-GB', options); %>
            <% var formattedTime = rawdate.toLocaleTimeString(); %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= formattedDate %> <%= formattedTime %></h5>
                  <p class="card-text"><img src="/img/enjoyment.svg" alt="Enjoyment Emoji" height="20" style="margin-right: 10px;">Enjoyment: <%= enjoyment_level %></p>
                  <p class="card-text"><img src="/img/surprise.svg" alt="Surprise Emoji" height="20" style="margin-right: 10px;">Surprise: <%= surprise_level %></p>
                  <p class="card-text"><img src="/img/contempt.svg" alt="Contempt Emoji" height="20" style="margin-right: 10px;">Contempt: <%= contempt_level %></p>
                  <p class="card-text"><img src="/img/sad.svg" alt="Sad Emoji" height="20" style="margin-right: 10px;">Sadness: <%= sadness_level %></p>
                  <p class="card-text"><img src="/img/fear.svg" alt="Fear Emoji" height="20" style="margin-right: 10px;">Fear: <%= fear_level %></p>
                  <p class="card-text"><img src="/img/disgust.svg" alt="Disgust Emoji" height="20" style="margin-right: 10px;">Disgust: <%= disgust_level %></p>
                  <p class="card-text"><img src="/img/angry.svg" alt="Anger Emoji" height="20" style="margin-right: 10px;">Anger: <%= anger_level %></p>
                  
                  <a href="/edit/<%= snapshotId %>" class="btn btn-warning">Edit</a>
                  <a href="/del/<%= snapshotId %>" class="btn btn-danger">Delete</a>
                </div>
              </div>
              <br>
            </div>
          <% }); %>
        </div>
      </div>
   </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>