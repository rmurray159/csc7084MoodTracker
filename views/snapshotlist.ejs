<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Entries</title>

    <style>
    </style>

  </head>
  <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><img src="/img/emoji-smile.svg" alt="smile emoji" height="30px">MoodMinder</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link"  href="/new">Add Snapshot</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/list">Entries</a>
              </li>
    
              <li class="nav-item">
                <a class="nav-link" href="#">Stats</a>
              </li>
            </ul>
            <button type="button" class="btn btn-outline-secondary btn-lg px-4">Log Out</button>
          </div>
        </div>
    </nav>
    <section class="gradient-background">
    <div class="container mt-5">
        <div class="row">
          <% const options = { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }; %>
          <% snapshots.forEach((snapshotlist) => { %>
            <% var snapshotId = snapshotlist.snapshot_id; %>
            <% var enjoyment_level = snapshotlist.enjoyment_level; %>
            <% var surprise_level = snapshotlist.surprise_level; %>
            <% var contempt_level = snapshotlist.contempt_level; %>
            <% var sadness_level = snapshotlist.sadness_level; %>
            <% var fear_level = snapshotlist.fear_level; %>
            <% var disgust_level = snapshotlist.disgust_level; %>
            <% var anger_level = snapshotlist.anger_level; %>
            <% var rawdate = new Date(snapshotlist.timestamp); %>
            <% var formattedDate = rawdate.toLocaleDateString('en-GB', options); %>
            <% var formattedTime = rawdate.toLocaleTimeString(); %>

        

            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= formattedDate %> <%= formattedTime %></h5>
                  <p class="card-text">Enjoyment: <%= enjoyment_level %></p>
                  <p class="card-text">Surprise: <%= surprise_level %></p>
                  <p class="card-text">Contempt: <%= contempt_level %></p>
                  <p class="card-text">Sadness: <%= sadness_level %></p>
                  <p class="card-text">Fear: <%= fear_level %></p>
                  <p class="card-text">Disgust: <%= disgust_level %></p>
                  <p class="card-text">Anger: <%= anger_level %></p>
                  
                  <a href="/singledetail/<%= snapshotId %>" class="btn btn-primary">Details</a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
   </section>
    

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>