<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Add Snapshot</title>

    <style>
    </style>

  </head>
  <body>

    <%- include('_navin') %>
   
    <section class="gradient-background">
        <div class="container mt-5">
          <% if (isLoggedIn) { %>
            <h1 class="text-center">Hello, <%= loggedInUser.first_name %>. How are you feeling?</h1>
            <form method="post" action="/new">

            <!-- Error message area for validation errors --> 
            <% if (errorMessage) { %>
              <div class="alert alert-danger" role="alert">
                <%= decodeURIComponent(errorMessage) %>
              </div>
            <% } %>

            <!-- Heading for Sliders -->
            <div class="mb-3">
                <h2>Emotion Snapshot</h2>
            </div>
        
            <!-- Range Sliders with Value Display -->
            
            <div class="mb-3">
              <label for="slider1" class="form-label">
                  <img src="/img/enjoyment.svg" alt="Enjoyment Emoji" height="20" style="margin-right: 10px;">Enjoyment:
                  <span id="slider1Value">0</span>
              </label>
              <input type="range" class="form-range slider1" id="slider1" name="slider1" max="10" onchange="updateSliderValue('slider1', 'slider1Value')">
          </div>
            <div class="mb-3">
                <label for="slider2" class="form-label">
                  <img src="/img/surprise.svg" alt="Surprise Emoji" height="20" style="margin-right: 10px;">Surprise: 
                  <span id="slider2Value">0</span></label>
                <input type="range" class="form-range slider2" id="slider2" name="slider2" max="10" onchange="updateSliderValue('slider2', 'slider2Value')">
            </div>
            <div class="mb-3">
                <label for="slider3" class="form-label">
                  <img src="/img/contempt.svg" alt="Contempt Emoji" height="20" style="margin-right: 10px;">Contempt: 
                  <span id="slider3Value">0</span></label>
                <input type="range" class="form-range slider3" id="slider3" name="slider3" max="10" onchange="updateSliderValue('slider3', 'slider3Value')">
            </div>
            <div class="mb-3">
                <label for="slider4" class="form-label">
                  <img src="/img/sad.svg" alt="Sad Emoji" height="20" style="margin-right: 10px;">Sadness: 
                  <span id="slider4Value">0</span></label>
                <input type="range" class="form-range slider4" id="slider4" name="slider4" max="10" onchange="updateSliderValue('slider4', 'slider4Value')">
            </div>
            <div class="mb-3">
                <label for="slider5" class="form-label">
                  <img src="/img/fear.svg" alt="Fear Emoji" height="20" style="margin-right: 10px;">Fear: 
                  <span id="slider5Value">0</span></label>
                <input type="range" class="form-range slider5" id="slider5" name="slider5" max="10" onchange="updateSliderValue('slider5', 'slider5Value')">
            </div>
            <div class="mb-3">
                <label for="slider6" class="form-label">
                  <img src="/img/disgust.svg" alt="Disgust Emoji" height="20" style="margin-right: 10px;">Disgust: <span id="slider6Value">0</span></label>
                <input type="range" class="form-range slider6" id="slider6" name="slider6" max="10" onchange="updateSliderValue('slider6', 'slider6Value')">
            </div>
            <div class="mb-3">
                <label for="slider7" class="form-label">
                  <img src="/img/angry.svg" alt="Anger Emoji" height="20" style="margin-right: 10px;">Anger:
                  <span id="slider7Value">0</span></label>
                <input type="range" class="form-range slider7" id="slider7" name="slider7" max="10" onchange="updateSliderValue('slider7', 'slider7Value')">
            </div>
        
            <!-- Button-Like Checkboxes - Allow Multiple Selection -->
                <div class="mb-3">
                  <h2>What's been happening?</h2>
                  <label for="checkboxGroup" class="form-label">Select all that apply:</label>
                    <div class="btn-group" role="group" aria-label="Checkbox Group" id="checkboxGroup">

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>

                      <input type="hidden" name="checkbox_value1" value="1">    
                      <input type="checkbox" class="btn-check" id="checkbox1" name="checkbox1">
                      <label class="btn btn-info" for="checkbox1">Family</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>

                      <input type="hidden" name="checkbox_value2" value="2">
                      <input type="checkbox" class="btn-check" id="checkbox2" name="checkbox2">
                      <label class="btn btn-info" for="checkbox2">Work</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value3" value="3">
                      <input type="checkbox" class="btn-check" id="checkbox3" name="checkbox3">
                      <label class="btn btn-info" for="checkbox3">Sleep</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value4" value="4">
                      <input type="checkbox" class="btn-check" id="checkbox4" name="checkbox4">
                      <label class="btn btn-info" for="checkbox4">Exercise</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>

                      <input type="hidden" name="checkbox_value5" value="5">
                      <input type="checkbox" class="btn-check" id="checkbox5" name="checkbox5">
                      <label class="btn btn-info" for="checkbox5">Weather</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value6" value="6">
                      <input type="checkbox" class="btn-check" id="checkbox6" name="checkbox6">
                      <label class="btn btn-info" for="checkbox6">Friends</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value7" value="7">
                      <input type="checkbox" class="btn-check" id="checkbox7" name="checkbox7">
                      <label class="btn btn-info" for="checkbox7">Date</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value8" value="8">
                      <input type="checkbox" class="btn-check" id="checkbox8" name="checkbox8">
                      <label class="btn btn-info" for="checkbox8">Study</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value9" value="9">
                      <input type="checkbox" class="btn-check" id="checkbox9" name="checkbox9">
                      <label class="btn btn-info" for="checkbox9">Holiday</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
              
                      <input type="hidden" name="checkbox_value10" value="10">
                      <input type="checkbox" class="btn-check" id="checkbox10" name="checkbox10">
                      <label class="btn btn-info" for="checkbox10">Volunteer</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>

                      <input type="hidden" name="checkbox_value11" value="11">
                      <input type="checkbox" class="btn-check" id="checkbox11" name="checkbox11">
                      <label class="btn btn-info" for="checkbox11">Healthy Food</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>

                      <input type="hidden" name="checkbox_value12" value="12">
                      <input type="checkbox" class="btn-check" id="checkbox12" name="checkbox12">
                      <label class="btn btn-info" for="checkbox12">Hungry</label>

                      <!-- Add space using Bootstrap spacing -->
                      <div class="mx-2"></div>
                    </div>
                </div>
        
            <!-- Text Box after Button Group -->
            <h2>Notes</h2>
            <div class="mb-3">
              <label for="notes" class="form-label">Add your notes:</label>
              <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
            </div>

        
            <button type="submit" class="btn btn-primary">Save Snapshot</button>
            </form>
          <% } %>
        </div>
    </section>

 
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script>
      function updateSliderValue(sliderId, spanId) {
          var slider = document.getElementById(sliderId);
          var valueSpan = document.getElementById(spanId);
          valueSpan.textContent = slider.value;
      }
    </script>

    

  </body>
</html>