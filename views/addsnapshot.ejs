<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Snapshot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
</head>
  <body>
    <%- include(_navin) %>

    <section class="gradient-background">
        <div class="px-4 pt-5 my-5 text-center border-bottom">
            <h1 class="display-4 fw-bold text-body-emphasis">Hi xx, how are you this am / pm?</h1>
            <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Enter your emotions below:</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5"> 
        </div>

        <div class="container mt-5">
            <form>
                <!-- Slider Range -->
                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Happiness:</label>
                    <div id="sliderValueHappy">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeHappy" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Surprise:</label>
                    <div id="sliderValueSurprise">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeSurprise" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Contempt:</label>
                    <div id="sliderValueContempt">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeContempt" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Contempt:</label>
                    <div id="sliderValueContempt">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeContempt" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Sadness:</label>
                    <div id="sliderValueSadness">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeSadness" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Fear:</label>
                    <div id="sliderValueFear">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeFear" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Disgust:</label>
                    <div id="sliderValueDisgust">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeDisgust" min="0" max="10" value="0">
                </div>

                <div class="mb-3">
                    <label for="sliderRange" class="form-label">Anger:</label>
                    <div id="sliderValueAnger">Feeling: 0</div>
                    <input type="range" class="form-range" id="sliderRangeAnger" min="0" max="10" value="0">
                </div> 



        
            <!-- Dropdown -->
            <div class="mb-3">
                <label for="dropdown" class="form-label">Trigger:</label>
                <select class="form-select" id="dropdown">
                <option value="option1">Poor Sleep</option>
                <option value="option2">Friends</option>
                <option value="option3">Family</option>
                <option value="option4">Work</option>
                </select>
            </div>

            <!-- Text Input Box -->
            <div class="mb-3">
                <label for="textInput" class="form-label">Diary:</label>
                <input type="text" class="form-control" id="textInput" placeholder="Enter text">
            </div>
        
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </section>
    <%- include(_footer) %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
      
    <!-- External JavaScript file -->
<script src="../public/js/script.js"></script>

</body>
</html>