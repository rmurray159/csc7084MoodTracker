<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">

    <style>
      .form-signin {
    max-width: 330px;
    padding: 1rem;
    }  
    </style>
</head>
<body>

  <%- include('_navout') %>

    <main class="form-signin w-100 m-auto">
        <form form id="changePasswordForm" action="/changepassword" method="post" class="needs-validation" novalidate>
          <h1 class="h3 mb-3 fw-normal">Change Password</h1>

          <!-- Error message area for validation errors and custom error message -->
          <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
          <% } else if (message) { %>
            <div class="alert alert-danger" role="alert">
                <span id="message"><%= message %></span>
            </div>
          <% } %>
          
    
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email_address" name="email_address" placeholder="Email" required>
            <label for="email_address" class="form-label">Email</label>
            <span class="placeholder-text">name@example.com</span>
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="current_password" name="current_password" placeholder="Current Password" minlength="3" required>
            <label for="current_password">Current Password</label>
            <span class="placeholder-text">Min 3 characters</span>
            <div class="invalid-feedback">
              Please enter a valid password.
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="new_password" name="new_password" placeholder="New Password" minlength="3" required>
            <label for="new_password">New Password</label>
            <span class="placeholder-text">Min 3 characters</span>
            <div class="invalid-feedback">
              Please enter a valid password.
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="repeat_password" name="repeat_password" placeholder="Repeat New Password" minlength="3" required>
            <label for="repeat_password">Repeat New Password</label>
            <span class="placeholder-text">Repeat Password</span>
            <div class="invalid-feedback">
              Passwords do not match.
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <br>
         
          <button class="btn btn-primary w-100 py-2" type="submit">Change Password</button>
        </form>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      
    <script>
      (function () {
          'use strict'
  
          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.querySelectorAll('.needs-validation')
  
          // Loop over them and prevent submission
          Array.prototype.slice.call(forms)
              .forEach(function (form) {
                  form.addEventListener('submit', function (event) {
                      if (!form.checkValidity() || !validatePasswords()) {
                          event.preventDefault()
                          event.stopPropagation()
                      }
  
                      form.classList.add('was-validated')
                  }, false)
              })
  
          function validatePasswords() {
              var newPassword = document.getElementById('new_password').value;
              var repeatPassword = document.getElementById('repeat_password').value;
              if (newPassword !== repeatPassword) {
                  // Passwords do not match
                  document.getElementById('repeat_password').setCustomValidity('Passwords do not match');
                  return false;
              } else {
                  // Passwords match
                  document.getElementById('repeat_password').setCustomValidity('');
                  return true;
              }
          }
      })();
    </script>
</body>
</html>